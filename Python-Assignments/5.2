largest = None
smallest = None

while True:
    try:
        numb = raw_input("Enter a number: ")
        num = int(numb)
    
        if largest is None: 
            largest = num
        elif num > largest:
                largest = num
        
       
        if smallest is None:
            smallest = num
        elif num < smallest:
            smallest = num

    except:    
        if numb == "done" : break
        else:   
            print "Invalid input"
            continue

print "Maximum is", largest
print "Minimum is", smallest